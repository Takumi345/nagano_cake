<div class="container">
  <div class="row">
    <div class="col-md-8">
<br>

<h3>注文履歴詳細</h3>

<br>

<p>購入者：<%= @order.customer.full_name %></p>
<p>注文日：<%= @order.created_at.strftime('%Y/%m/%d') %></p>
<p>配送先：<%= @order.postal_code %><%= @order.address %><%= @order.name %></p>
<p>支払方法：<%= @order.payment_method_i18n %></p>
<p>注文ステータス：<%#= f.collection_select(:order_id, @order, :id, :status) %></p>


<table class="table">
<thead>
          <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          </tr>
        </thead>
      <% @price_subtotal2=0 %>
      <% @order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td>
          <%= order_detail.item.name %>
        </td>
        <td>
          <% @price=order_detail.price %>
          <% @price*=1.1 %>
          <%= @price.round %>
        </td>

        <td>
          <%= order_detail.amount %>
        </td>

        <td>
          <% @price_subtotal=@price %>
          <% @price_subtotal*=order_detail.amount %>
          <%= @price_subtotal.round %>
        </td>

        <td>
          <%= order_detail.status_i18n %>
        </td>
      </tr>
      </tbody>
      <% @price_subtotal2+=@price_subtotal %>
      <% end %>
</table>

  <p>
    商品合計
    <%= @price_subtotal2.round %>
  </p>
  <p>
    送料
    <%= @order.shipping_cost %>
  </p>
  <p>
    請求金額合計
    <%= @order.total_payment %>
  </p>
</div>
</div>
</div>
