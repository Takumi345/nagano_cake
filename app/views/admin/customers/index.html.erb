<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-2">
      <p>会員一覧</p>
    </div>
  </div>

    <div class="col-md-8 offset-md-2">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>

            <td>
              <%= link_to customer.last_name, admin_customer_path(customer.id) %>
              <%= customer.first_name%>
            </td>

            <td><%= customer.email %></td>

            <td>
              <% if customer.is_deleted%>
              有効
              <% else %>
              退会
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
