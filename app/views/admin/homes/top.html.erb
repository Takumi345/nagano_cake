 <h1>注文履歴一覧</h1>
          <thead>
            <p>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            </p>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <p>
              <td>
                <%= link_to order.updated_at, admin_order_path(order.id) %>
              </td>
              <td>
                <%= order.customer.last_name %><= order.customer.first_name %>
              </td>
              <td>
                <% @amount=0 %>
                <% order.orders_details.each do |orders_detail| %>
                <% @amount+=orders_detail.amount %>
                <% end %>
                <%= @amount %>
              </td>
              <td>
                <%= order.status %>
              </td>
            </p>
            <% end %>
          </tbody>
