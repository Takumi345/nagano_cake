<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-1">
      <p>ジャンル一覧・追加</p>
    </div>
  </div>

    <div class="col-md-5">
      <%= form_with model: @genre, url: admin_genre_index_path do |f| %>
      <tr>
      ジャンル名
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
      </tr>
    </div>

    <div class="col-md-5">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する" , edit_admin_genre_path(genre.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>





