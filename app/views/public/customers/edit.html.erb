<div class="container">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-hover table-inverse">

        <h1>会員情報編集</h1>
          <thead>
            <td></td>
          </thead>

          <tbody>
            <%= form_with model: @customer, url: public_customers_path(@customer) do |f| %>
            <tr>
              <td>氏名</td>
              <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
              </td>
            </tr>

            <tr>
              <td>フリガナ</td>
              <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </td>
            </tr>

            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <td>住所</td>
              <td><%= f.text_field :address %></td>
            </tr>

            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>

            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
          </tbody>
      </table>
    </div>
    <div class="col-md-7 offset-md-2">
      <td>
        <%= f.submit '変更を保存' %>
      </td>

      <td>
        <%= link_to "退会する", public_customers_confirm_path(current_customer) %>
      </td>
            <% end %>
    </div>
  </div>
</div>