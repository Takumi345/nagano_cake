<br>
<br>
<div class="container">
  <h3>注文履歴詳細</h3>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
          <th>注文情報</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              注文日
            </td>
            <td>
              <%= @order.created_at.strftime('%Y/%m/%d') %>
            </td>
          </tr>
          <tr>
            <td>
              配送先
            </td>
            <td>
              <%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>
              支払方法
            </td>
            <td>
              <%= @order.payment_method_i18n %>
            </td>
          </tr>
          <tr>
            <td>
              ステータス
            </td>
            <td>
              <%= @order.status_i18n %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-3">
      <table class="table">
      <thead>
        <tr>
        <th>請求情報</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            商品合計
          </td>
          <td>
            <%= @order.total_payment %>
          </td>
        </tr>
        <tr>
          <td>
            配送料
          </td>
          <td>
            <%= @order.shipping_cost %>
          </td>
        </tr>
        <tr>
          <td>
            ご請求額
          </td>
          <td>

          </td>
        </tr>
      </table>
    </div>
  </div>
  <br>
  <br>


  <div class="row">
    <div class="col-md-6">
    <p>注文内容</p>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @order_details.each do |order_item| %>
        <tbody>
          <tr>
            <td>
              <%= order_item.item.name %>
            </td>

            <td>
              <%= order_item.price %>
            </td>

            <td>
              <%= order_item.amount %>
            </td>

            <td>
              <% @price = 0 %>
              <% @price = order_item.price %>
              <% @price *= order_item.amount %>
              <%= @price %>
            </td>

          </tr>
        <% end %>
        <tbody>

      </table>
    </div>
  </div>
</div>