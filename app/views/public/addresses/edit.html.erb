<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>配送先編集</h1>
    </div>

    <div class="col-md-10 ">
    <br>
    <%= form_with model: @address, url: public_address_path(@address), method: :patch do |f| %>

      <p>
        郵便番号(ハイフンなし)
        <%= f.text_field :postal_code %>
      </p>

      <p>
        住所
        <%= f.text_field :address %>
      </p>

      <p>
        宛名
        <%= f.text_field :name %>
        <%= f.submit '変更内容を保存' %>
      </p>
    <% end %>
    </div>
  </div>
</div>