<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar">
        <div class="container">
          <%= link_to root_path do%>
          <%= image_tag 'cake', size: "50x50" %>
          <% end %>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>

              <div class="mr-3">
                <li>
                  <%= link_to "マイページ", public_customers_path(current_customer) %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "商品一覧", public_items_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "カート", public_cart_items_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                </li>
              </div>

              <% elsif admin_signed_in? %>
              <div class="mr-3">
                <li>
                  <%= link_to "商品一覧", admin_items_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "会員一覧", admin_customers_path  %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "注文履歴一覧", admin_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "ジャンル一覧", admin_genre_index_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                </li>
              </div>

              <% else %>
              <div class="mr-3">
                <li>
                  <%= link_to "About", about_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "商品一覧", public_items_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "新規登録", new_customer_registration_path %>
                </li>
              </div>

              <div class="mr-3">
                <li>
                  <%= link_to "ログイン", new_customer_session_path %>
                </li>
              </div>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
